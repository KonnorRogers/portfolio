---
variables:
  metadata: object
  title: string
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
{% capture page_title %}{{ title | strip_html | strip_newlines }}{% endcapture %}
<title>
  {% if page_title != "" %}
    {{ page_title | escape }} | {{ metadata.title | escape }}
  {% else %}
    {{ metadata.title | escape }}: {{ metadata.tagline | escape }}
  {% endif %}
</title>

<meta name="description" content="{{ metadata.description }}" />

<!-- Icons -->
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
<link rel="manifest" href="/site.webmanifest">

<link rel="stylesheet" href="/_frontend_/styles/index.css" data-turbolinks-track='reload' />
<script src="/_frontend_/javascript/index.js" data-turbolinks-track='reload' type="module" defer></script>



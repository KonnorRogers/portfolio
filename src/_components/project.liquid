---
variables:
  project: [Object, Project to render]
---

<div class="flex flex-col items-center p-2 -mx-4 text-center border border-gray-300 border-solid rounded-lg shadow md:p-4"
     style="min-width:400;">
  <p class="font-bold text-gray-700">
    {{ project.name }}
  </p>

  {% if project.deployed_app %}
    {% assign href = project.deployed_app %}
  {% else %}
    {% assign href = project.source_code %}
  {% endif %}

  <a href="{{href}}"
     target="_blank"
     rel="nofollow external noopener"
     class="p-2 border-2 border-transparent rounded-lg hover:border-indigo-600 focus:border-indigo-600">
    <img height="300px" width="300px"
         class="rounded-lg"
         src="{{project.img_path}}"
         alt="{{project.alt_text}}" />
  </a>

  {% if project.deployed_app %}
    <p class="pt-2">
      <span class="block text-gray-900">Deployed App:</span>
      <a href="{{project.deployed_app}}"
         class="border-transparent md:border-indigo-800">
        {{ project.deployed_app }}
      </a>
    </p>
  {% endif %}

  <p>
    <span class="block text-gray-900">Source Code:</span>
    <a href="{{project.source_code}}"
       class="border-transparent md:border-indigo-800">
      {{ project.source_code }}
    </a>
  </p>

  <p class="pt-4 text-gray-800">
    {{project.description}}
  </p>
</div>

